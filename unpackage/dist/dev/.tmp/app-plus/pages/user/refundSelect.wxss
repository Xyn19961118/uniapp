page {
  padding-bottom: 80rpx;
}
.items {
  margin-top: 20rpx;
}
.item {
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  background: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.pic {
  width: 132rpx;
  height: 132rpx;
  border: #eee 2rpx solid;
  margin-right: 16rpx;
}
.info {
  width: calc(100% - 280rpx);
}
.name {
  color: #333;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal !important;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.oth {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin-top: 8rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.price {
  font-size: 32rpx;
  color: #f23;
}
.number {
  font-size: 24rpx;
  margin-left: 12rpx;
}
.source {
  margin-left: 12rpx;
  font-size: 24rpx;
  color: #2f9bef;
}
.select {
  width: 36rpx;
  height: 36rpx;
  margin-left: auto;
}
.submit {
  width: 100%;
  height: 80rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 2;
  background: #f23;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
}

